#!/usr/bin/env php
<?php declare(strict_types=1);

use matla\phpstancs\StanCs;

$vendorDir = is_dir(__DIR__ . '/../vendor') ?
    __DIR__ . '/../vendor/'
    : __DIR__ . '/../../../../vendor/';

require $vendorDir . 'autoload.php';

$stanCs = new StanCs($argv, $vendorDir . '../');

$result = $stanCs->run();
echo $result;

